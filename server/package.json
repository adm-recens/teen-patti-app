{
  "name": "funny-friends-server",
  "version": "2.0.0",
  "description": "Funny Friends Game Platform - Backend Server for multiplayer card games",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon server.js",
    "start": "npx prisma db push && npx prisma generate && node scripts/seed-games.js && node server.js",
    "db:push": "npx prisma db push",
    "db:push:sqlite": "npx prisma db push --schema=prisma/schema.sqlite.prisma",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio",
    "db:seed": "node scripts/seed-games.js",
    "db:generate": "npx prisma generate",
    "db:generate:sqlite": "npx prisma generate --schema=prisma/schema.sqlite.prisma"
  },
