generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String   
  role      String   @default("GUEST")
  createdAt DateTime @default(now())
  player    Player?
}

model GameSession {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  totalRounds Int
  currentRound Int       @default(1)
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  hands       GameHand[]
  players     Player[]
}

model GameHand {
  id        Int      @id @default(autoincrement())
  winner    String
  potSize   Int
  logs      String   // SQLite doesn't support Json, use String
  createdAt DateTime @default(now())
  
  sessionId Int?
  session   GameSession? @relation(fields: [sessionId], references: [id])
}

model Player {
  id             Int     @id @default(autoincrement())
  name           String
  sessionBalance Int     @default(0)
  seatPosition   Int?
  
  userId         Int?    @unique
  user           User?   @relation(fields: [userId], references: [id])
  
  sessionId      Int?
  session        GameSession? @relation(fields: [sessionId], references: [id])
  
  @@unique([name, sessionId])
}
