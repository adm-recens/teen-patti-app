generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String   
  role      String   @default("VIEWER") // 'OPERATOR' or 'VIEWER'
  createdAt DateTime @default(now())
}

model GameSession {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  totalRounds Int
  currentRound Int       @default(1)
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  hands       GameHand[]
  players     Player[]
}

model GameHand {
  id        Int      @id @default(autoincrement())
  winner    String
  potSize   Int
  logs      Json     
  createdAt DateTime @default(now())
  
  sessionId Int?
  session   GameSession? @relation(fields: [sessionId], references: [id])
}

model Player {
  id             Int     @id @default(autoincrement())
  name           String  @unique
  sessionBalance Int     @default(0)
  
  sessionId      Int?
  session        GameSession? @relation(fields: [sessionId], references: [id])
}
