generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String   
  role      String   @default("GUEST") // 'ADMIN', 'OPERATOR', 'PLAYER', 'GUEST'
  createdAt DateTime @default(now())
  player    Player?
}

model GameSession {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  totalRounds Int
  currentRound Int       @default(1)
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  hands       GameHand[]
  players     Player[]
}

model GameHand {
  id        Int      @id @default(autoincrement())
  winner    String
  potSize   Int
  logs      Json     // PostgreSQL supports JSON natively
  createdAt DateTime @default(now())
  
  sessionId Int?
  session   GameSession? @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model Player {
  id             Int     @id @default(autoincrement())
  name           String
  sessionBalance Int     @default(0)
  seatPosition   Int?    // 1-based index for seating
  
  userId         Int?    @unique
  user           User?   @relation(fields: [userId], references: [id])
  
  sessionId      Int?
  session        GameSession? @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  @@unique([name, sessionId])  // Player names must be unique within a session
}
